<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("post-cont") %>
  </div>

  <%= f.submit t("post-post"), class: "btn btn-primary" %>

  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<script src="app/assets/javascripts/micropost_form.js"> </script>
